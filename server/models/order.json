{
  "name": "Order",
  "plural": "orders",
  "mongodb": {
    "collection": "orders"
  },
  "base": "PersistedModel",
  "properties": {
    "status": {
      "type": "String",
      "enum": ["open", "pending", "paid", "closed"],
      "default": "open",
      "required": true
    },
    "discount": {
      "type": "Number"
    },
    "shipping_cost": {
      "type": "Number"
    },
    "taxes": {
      "type": "Number"
    },
    "total": {
      "type": "Number"
    },
    "notes": {
      "type": "String"
    },
    "feedback": {
      "type": "Number"
    }
  },
  "validations": [],
  "relations": {
    "customer": {
      "type": "belongsTo",
      "model": "Customer",
      "foreignKey": "customer_id"
    },
    "order_items": {
      "type": "hasMany",
      "model": "OrderItem",
      "foreignKey": "order_id"
    },
    "payments": {
      "type": "hasMany",
      "model": "Payment",
      "foreignKey": "order_id"
    },
    "taxes": {
      "type": "hasMany",
      "model": "Tax"
    }
  },
  "acls": [],
  "methods": []
}