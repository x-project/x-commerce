{
  "name": "Review",
  "plural": "reviews",
  "mongodb": {
    "collection": "reviews"
  },
  "base": "PersistedModel",
  "properties": {
   "title": {
      "type": "String"
    },
    "text": {
      "type": "String"
    },
    "rating": {
      "type": "Number"
    },
    "closed": {
      "type": "Boolean",
      "default": false
    }
  },
  "relations": {
    "customer": {
      "type": "belongsTo",
      "model": "Customer",
      "foreignKey": "customer_id"
    },
    "replies": {
      "type": "hasMany",
      "model": "ReviewReply",
      "foreignKey": "review_id"
    },
    "product": {
      "type": "belongsTo",
      "model": "Product",
      "foreignKey": "product_id"
    }
  },
  "acls": [],
  "methods": [],
  "validations": []
}