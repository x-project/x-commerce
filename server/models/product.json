{
	"name": "Product",
	"plural": "products",
  "mongodb": {
    "collection": "products"
  },
	"base": "PersistedModel",
	"properties": {
		"title": {
			"type": "String",
			"required": true
		},
		"description": {
			"type": "String"
		},
		"price":  {
			"type": "Number"
		},
		"compare_at_price": {
			"type": "Number"
		},
		"is_charge_taxes": {
			"type": "Boolean"
		},
		"sku": {
			"type": "String"
		},
		"barcode": {
			"type": "String"
		},
		"track_quantity": {
			"type": "Boolean"
		},
		"quantity": {
			"type": "Number"
		},
		"sell_after_purchase": {
			"type": "Boolean"
		},
		"unit_measure_weight": {
			"type": "String"
		},
		"weight": {
			"type": "Number"
		},
		"require_shipping": {
			"type": "Boolean"
		},
		"is_published": {
			"type": "Boolean"
		},
		"published_at": {
			"type": "Date"
		},
		"tags": {
			"type": ["String"]
		}
	},
	"relations": {
		"product_type": {
			"type": "belongsTo",
			"model": "ProductType",
			"foreignKey": "product_type_id"
		},
		"vendor": {
			"type": "belongsTo",
			"model": "Vendor",
			"foreignKey": "vendor_id"
		},
		"collections": {
			"type": "hasAndBelongsToMany",
			"model": "Collection",
			"through": "CollectionProduct"
		},
		"images": {
			"type": "hasMany",
			"model": "Image",
			"foreignKey": "imageId"
		},
		"options": {
			"type": "hasMany",
			"model": "ProductOption"
		},
		"variants": {
			"type": "hasMany",
			"model": "ProductVariant"
		}
	},
	"acls": [],
	"methods": [],
	"validations": []
}