{
  "name": "Customer",
  "plural": "customers",
  "mongodb": {
    "collection": "customers"
  },
  "base": "User",
  "properties": {
    "first_name": {
      "type": "String"
    },
    "last_name": {
      "type": "String"
    },
    "email": {
      "type": "String",
      "length": 64,
      "required": true
    },
    "marketing": {
      "type": "Boolean"
    },
    "taxes_exempt": {
      "type": "Boolean"
    },
    "location": {
      "type": "String"
    },
    "location_number": {
      "type": "String"
    },
   "address_details": {
      "type": "String"
    },
    "phone":  {
      "type": "String"
    },
    "notes": {
      "type": "String"
    },
    "tags": {
      "type": ["String"]
    },
    "last_enter_token": {
      "type": "String"
    }

  },
  "relations": {
    "shipping_addresses": {
      "type": "hasMany",
      "model": "Address"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "change_email"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": "change_password"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "find"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "findById"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "count"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "enter_token"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "enter"
    },
    {
      "principalType": "USER",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": "create"
    }
  ],
  "validations": [],
  "methods": []
}