{
  "name": "Store",
  "plural": "stores",
  "mongodb": {
    "collection": "stores"
  },
  "base": "PersistedModel",
  "properties": {
    "name": {
      "type": "String",
      "default": "x-commerce",
      "required": true
    },
    "description": {
      "type": "String",
      "required": true
    },
    "mobile_phone": {
      "type": "String"
    },
    "office_phone": {
      "type": "String"
    },
    "email": {
      "type": "String",
      "length": 64,
      "required": true
    },
    "policy": {
      "type": "String"
    },
    "payment_system": {
      "type": ["String"],
      "enum": ["braintree", "stripe"],
      "default": ["braintree"]
    }
  },
  "relations": {
    "nexus": {
      "type": "belongsTo",
      "model": "Nexus",
      "foreignKey": "nexus_id"
    },
    "image": {
      "type": "hasOne",
      "model": "Image",
      "foreignKey": "image_id"
    }
  },
  "acls": [],
  "methods": [],
  "validations": []
}